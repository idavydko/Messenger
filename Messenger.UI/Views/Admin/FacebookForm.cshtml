
<div class="form-horizontal">
    <div class="row">
        <div class="col-sm-offset-1 col-md-10 col-sm-offset-1 framed-block">
            <div class="form-group">
                <textarea id="Message" rows="4" class="form-control" placeholder="Type your message here"></textarea>
            </div>
            <div class="form-group inserted-images">
            </div>
            <div class="form-group inserted-buttons-message">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-1 form-group commands-block">
            <button class="btn btn-default" id="insertImage"
                    data-toggle="modal" data-target="#InsertImageModal">Insert image</button>
            <button class="btn btn-default insert-button" onclick="toggleInsertButtons()" >Insert answer buttons</button>
            <button class="btn btn-default" onclick="sumbitMessengerForm()">Send to all users</button>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="messenger modal fade" id="InsertImageModal" tabindex="-1" role="dialog" aria-labelledby="insertImageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="insertImageModalLabel">Choose Image To Insert</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-md-3 framed-block img-container">
                    <img src="~/images/storage/Boarding_pass.jpg" class="img-to-insert" />
                </div>
                <div class="col-md-3 framed-block img-container">
                    <img src="~/images/storage/Coupon.png" class="img-to-insert" />
                </div>
                <div class="col-md-3 framed-block img-container">
                    <img src="~/images/storage/QR_code.PNG" class="img-to-insert" />
                </div>
                <div class="col-md-3 framed-block img-container">
                    <img src="~/images/storage/Receipt.jpg" class="img-to-insert" />
                </div>
                <div class="col-md-3 framed-block img-container">
                    <img src="~/images/storage/Ticket.jpg" class="img-to-insert" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="insertImages()">Insert Images</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
